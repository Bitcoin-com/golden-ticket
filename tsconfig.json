{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/",
    "target": "es6",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "files": [
    "src/globals.d.ts",
    "src/start.ts",
    "src/createCSV/index.ts",
    "src/createTickets/index.ts",
    "src/fundMothership/index.ts",
    "src/fundTickets/index.ts",
    "src/generateWallet/index.ts"
  ]
}
